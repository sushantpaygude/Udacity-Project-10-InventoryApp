<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_productDetails"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/list_icon"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newproduct_name"
        android:hint="Enter Product Name"
        android:textSize="20sp"
        android:layout_marginBottom="3dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newproduct_price"
        android:hint="Enter Product Price"
        android:textSize="20sp"
        android:layout_marginBottom="3dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newproduct_quantity"
        android:hint="Enter Product Quantity"
        android:textSize="20sp"
        android:layout_marginBottom="3dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newproduct_supplier_name"
        android:hint="Enter Supplier Name"
        android:textSize="20sp"
        android:layout_marginBottom="3dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newproduct_supplier_contact"
        android:hint="Enter 10 digit Supplier Contact"
        android:textSize="20sp"
        android:layout_marginBottom="3dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_image"
            android:textSize="20sp"/>
        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/gallery_blue"
            android:id="@+id/button_image"
            android:layout_marginLeft="5dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/newproduct_image"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button_add"
        android:background="@drawable/tick_blue"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>

</LinearLayout>